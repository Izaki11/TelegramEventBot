<Window x:Class="TelegramEventBot_AdminPanel.ChatEntryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelegramEventBot_AdminPanel"
        mc:Ignorable="d"
        Title="New Chat Group" Height="180" Width="320"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Chat Group Name" />
        <TextBox x:Name="ChatGroupName" />
        <TextBlock Text="Chat Group ID" Margin="0 10 0 0" />
        <TextBox x:Name="ChatGroupId" />
        
        <StackPanel Orientation="Horizontal" Margin="0 10" HorizontalAlignment="Center">
            <Button x:Name="OkButton" Click="OkButton_Click" IsDefault="True" Content="Ok" Width="60" Margin="5 0" />
            <Button x:Name="CancelButton" Click="CancelButton_Click" IsCancel="True" Content="Cancel" Width="60" Margin="5 0" />
        </StackPanel>
        
    </StackPanel>
</Window>
